@page
@model AgriEnergyConnect.Pages.Farming.ProjectMatchModel
@{
    ViewData["Title"] = "ProjectMatch";
}

<header class="container mt-3">
    <h1>Sustainable Ag & Renewables - Project Matchmaker</h1>
    <p>Connect with experts to bring your sustainable farming projects to life.</p>
</header>

<section class="container mt-5">
    <h2>Find Your Project Partner</h2>
    <div class="row">
        <div class="col-md-6">
            <h3>Farmers</h3>
            <p>Are you looking for an expert to collaborate on your sustainable agriculture project? Share your project details and find the perfect match!</p>
            <a href="#" class="btn btn-primary">Post a Project</a>
        </div>
        <div class="col-md-6">
            <h3>Green Energy Experts</h3>
            <p>Do you have the expertise to help farmers implement sustainable solutions? Browse current projects and connect with those seeking your skills.</p>
            <a href="#" class="btn btn-primary">Browse Projects</a>
        </div>
    </div>
</section>

<section class="container mt-5">
    <h2>Featured Projects</h2>
    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <h5 class="card-title">Building a Community Solar Project</h5>
            <p class="card-text">A farmer cooperative seeks an expert to design and install a community solar power system.</p>
            <a href="#" class="btn btn-sm btn-outline-primary">See Project Details</a>
        </div>
    </div>
    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <h5 class="card-title">Implementing Biogas Technology</h5>
            <p class="card-text">A dairy farm seeks an expert to help set up a biogas digester system to convert waste into energy.</p>
            <a href="#" class="btn btn-sm btn-outline-primary">See Project Details</a>
        </div>
    </div>
    <a href="#" class="btn btn-primary">View All Projects</a>
</section>
