@page
@model AgriEnergyConnect.Pages.Farming.LearningModel
@{
    ViewData["Title"] = "Learning";
}

<header class="container mt-3">
    <h1>Sustainable Ag & Renewables - Learning Center</h1>
    <p>Empower yourself with knowledge to build a greener future for agriculture.</p>
</header>

<section class="container mt-5">
    <h2>Explore Learning Resources</h2>
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <img src="online-course.jpg" class="card-img-top" alt="Online Course">
                <div class="card-body">
                    <h5 class="card-title">Online Courses</h5>
                    <p class="card-text">Enroll in self-paced online courses on various sustainable agriculture topics.</p>
                    <a href="#" class="btn btn-primary">Explore Courses</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <img src="webinar.jpg" class="card-img-top" alt="Webinar">
                <div class="card-body">
                    <h5 class="card-title">Webinars & Events</h5>
                    <p class="card-text">Attend live and recorded webinars on integrating renewables into agriculture.</p>
                    <a href="#" class="btn btn-primary">View Schedule</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <img src="articles.jpg" class="card-img-top" alt="Articles">
                <div class="card-body">
                    <h5 class="card-title">Articles & Guides</h5>
                    <p class="card-text">Access a collection of informative articles and guides on sustainable farming practices.</p>
                    <a href="#" class="btn btn-primary">Browse Articles</a>
                </div>
            </div>
        </div>
    </div>
</section>
