@page
@model AgriEnergyConnect.Pages.Farming.FarmingHubModel
@{
    ViewData["Title"] = "FarmingHub";
}

<section class="container mt-5">
    <h2>Explore Sustainable Practices</h2>
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <img src="organic-farming.jpg" class="card-img-top" alt="Organic Farming">
                <div class="card-body">
                    <h5 class="card-title">Organic Farming</h5>
                    <p class="card-text">Learn about organic farming methods to improve soil health and crop quality.</p>
                    <a href="#" class="btn btn-primary">Explore Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <img src="water-conservation.jpg" class="card-img-top" alt="Water Conservation">
                <div class="card-body">
                    <h5 class="card-title">Water Conservation</h5>
                    <p class="card-text">Discover techniques to conserve water and improve irrigation efficiency on your farm.</p>
                    <a href="#" class="btn btn-primary">Explore Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card h-100 shadow-sm">
                <img src="soil-health.jpg" class="card-img-top" alt="Soil Health">
                <div class="card-body">
                    <h5 class="card-title">Soil Health</h5>
                    <p class="card-text">Learn about practices to improve soil health for better crop yields and long-term sustainability.</p>
                    <a href="#" class="btn btn-primary">Explore Now</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="container mt-5">
    <h2>Knowledge Base</h2>
    <p>Find informative articles, guides, and videos on various sustainable farming topics.</p>
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Composting for Beginners</h5>
                    <p class="card-text">A step-by-step guide to setting up and maintaining a compost bin on your farm.</p>
                    <a href="#" class="btn btn-sm btn-outline-primary">Read More</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Cover Cropping for Sustainable Soil Management</h5>
                    <p class="card-text">Discover the benefits of cover cropping and how to implement it in your farming practices.</p>
                    <a href="#" class="btn btn-sm btn-outline-primary">Read More</a>
                </div>
            </div>
        </div>
    </div>
</section>
